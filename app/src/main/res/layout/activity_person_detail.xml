<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_list_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ssermakov.newrecycler.view.PersonDetailActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_body"
        android:layout_alignParentStart="true"
        android:capitalize="none"
        android:elevation="5dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:textSize="24dp"
        tools:text="Катя" />

    <View
        android:id="@+id/div_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_of_illnesses"
        android:layout_alignParentStart="true"

        android:paddingBottom="20dp"
        android:paddingLeft="8dp"
        tools:text="Общая продолжительность болезни:" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/message_body"
        android:layout_alignBottom="@+id/message_body"
        android:layout_toEndOf="@+id/message_body"
        android:padding="18dp"
        tools:text="241" />

    <ListView
        android:id="@+id/list_of_illnesses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/div_center">

    </ListView>



</RelativeLayout>